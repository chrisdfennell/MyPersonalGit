@page "/profile/{Username}"
@using LibGit2Sharp
@using MyPersonalGit.Data
@using MyPersonalGit.Models
@using UserProfileModel = MyPersonalGit.Models.UserProfile
@inject IUserProfileService ProfileService
@inject IAdminService AdminService
@inject IRepositoryService RepoService
@inject IConfiguration Config
@inject NavigationManager Navigation
@using MyPersonalGit.Services
@inject CurrentUserService UserService
@rendermode InteractiveServer

<PageTitle>@Username - MyPersonalGit</PageTitle>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(UserProfileData.AvatarUrl))
                    {
                        <img src="@UserProfileData.AvatarUrl" class="rounded-circle mb-3" style="width: 150px; height: 150px;" alt="Avatar" />
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 150px; height: 150px; font-size: 4rem; color: white;">
                            @Username[0].ToString().ToUpper()
                        </div>
                    }
                    <h4>@(string.IsNullOrEmpty(UserProfileData.FullName) ? Username : UserProfileData.FullName)</h4>
                    <p class="text-muted">@("@" + Username)</p>

                    @if (!string.IsNullOrEmpty(UserProfileData.Bio))
                    {
                        <p class="mt-3">@UserProfileData.Bio</p>
                    }

                    <div class="mt-3 text-start">
                        @if (!string.IsNullOrEmpty(UserProfileData.Company))
                        {
                            <div class="mb-2">
                                <i class="bi bi-building"></i> @UserProfileData.Company
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(UserProfileData.Location))
                        {
                            <div class="mb-2">
                                <i class="bi bi-geo-alt"></i> @UserProfileData.Location
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(UserProfileData.Website))
                        {
                            <div class="mb-2">
                                <i class="bi bi-link-45deg"></i> <a href="@UserProfileData.Website" target="_blank">@UserProfileData.Website</a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(UserProfileData.TwitterHandle))
                        {
                            <div class="mb-2">
                                <i class="bi bi-twitter"></i> @("@" + UserProfileData.TwitterHandle)
                            </div>
                        }
                    </div>

                    @if (IsOwnProfile)
                    {
                        <button class="btn btn-primary w-100 mt-3" @onclick='() => Navigation.NavigateTo("/settings")'>
                            <i class="bi bi-gear"></i> Edit Profile
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "overview" ? "active" : "")" @onclick='() => ActiveTab = "overview"' style="cursor: pointer;">
                        Overview
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "activity" ? "active" : "")" @onclick='() => ActiveTab = "activity"' style="cursor: pointer;">
                        Activity
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "repositories" ? "active" : "")" @onclick='() => ActiveTab = "repositories"' style="cursor: pointer;">
                        Repositories
                    </a>
                </li>
            </ul>

            @if (ActiveTab == "overview")
            {
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="mb-0">@Statistics.TotalRepositories</h3>
                                <small class="text-muted">Repositories</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="mb-0">@Statistics.TotalCommits</h3>
                                <small class="text-muted">Commits</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="mb-0">@Statistics.TotalPullRequests</h3>
                                <small class="text-muted">Pull Requests</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="mb-0">@Statistics.TotalIssues</h3>
                                <small class="text-muted">Issues</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            @Statistics.ContributionsThisYear contributions in the last year
                        </h5>
                    </div>
                    <div class="card-body" style="overflow-x: auto;">
                        <div class="contribution-graph">
                            @{
                                var contributionLookup = Contributions.ToDictionary(c => c.Date, c => c);
                                var today = DateTime.UtcNow.Date;
                                var graphStart = today.AddDays(-364);
                                graphStart = graphStart.AddDays(-(int)graphStart.DayOfWeek);
                                var monthLabels = BuildMonthLabels(graphStart);
                            }
                            <div class="d-flex align-items-start" style="gap: 2px;">
                                <div class="d-flex flex-column me-1" style="gap: 2px; padding-top: 18px;">
                                    <div style="height: 11px; font-size: 9px; line-height: 11px;" class="text-muted"></div>
                                    <div style="height: 11px; font-size: 9px; line-height: 11px;" class="text-muted">Mon</div>
                                    <div style="height: 11px; font-size: 9px; line-height: 11px;" class="text-muted"></div>
                                    <div style="height: 11px; font-size: 9px; line-height: 11px;" class="text-muted">Wed</div>
                                    <div style="height: 11px; font-size: 9px; line-height: 11px;" class="text-muted"></div>
                                    <div style="height: 11px; font-size: 9px; line-height: 11px;" class="text-muted">Fri</div>
                                    <div style="height: 11px; font-size: 9px; line-height: 11px;" class="text-muted"></div>
                                </div>
                                @for (int w = 0; w < 53; w++)
                                {
                                    var weekStart = graphStart.AddDays(w * 7);
                                    var monthLabel = monthLabels.GetValueOrDefault(w, "");
                                    <div class="d-flex flex-column" style="gap: 2px;">
                                        <div style="height: 14px; font-size: 9px; line-height: 14px;" class="text-muted">@monthLabel</div>
                                        @for (int d = 0; d < 7; d++)
                                        {
                                            var date = weekStart.AddDays(d);
                                            if (date > today)
                                            {
                                                <div style="width: 11px; height: 11px;"></div>
                                            }
                                            else
                                            {
                                                var hasData = contributionLookup.TryGetValue(date, out var dayData);
                                                var count = hasData ? dayData!.Count : 0;
                                                var level = hasData ? dayData!.Level : 0;
                                                <div class="contribution-day level-@level"
                                                     title="@count contributions on @date.ToString("MMM d, yyyy")"
                                                     style="width: 11px; height: 11px; border-radius: 2px;">
                                                </div>
                                            }
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="mt-3 d-flex align-items-center" style="gap: 4px;">
                            <small class="text-muted me-1">Less</small>
                            <div class="contribution-day level-0" style="width: 11px; height: 11px; border-radius: 2px;"></div>
                            <div class="contribution-day level-1" style="width: 11px; height: 11px; border-radius: 2px;"></div>
                            <div class="contribution-day level-2" style="width: 11px; height: 11px; border-radius: 2px;"></div>
                            <div class="contribution-day level-3" style="width: 11px; height: 11px; border-radius: 2px;"></div>
                            <div class="contribution-day level-4" style="width: 11px; height: 11px; border-radius: 2px;"></div>
                            <small class="text-muted ms-1">More</small>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        @if (Activities.Count == 0)
                        {
                            <p class="text-muted">No recent activity</p>
                        }
                        else
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var activity in Activities.Take(10))
                                {
                                    <div class="list-group-item px-0">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <i class="bi @GetActivityIcon(activity.ActivityType)"></i>
                                                <strong>@GetActivityVerb(activity.ActivityType)</strong> in
                                                <a href="@activity.Url">@activity.Repository</a>
                                            </div>
                                            <small class="text-muted">@FormatTimeAgo(activity.Timestamp)</small>
                                        </div>
                                        <small class="text-muted">@activity.Description</small>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else if (ActiveTab == "activity")
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">All Activity</h5>
                    </div>
                    <div class="card-body">
                        @if (Activities.Count == 0)
                        {
                            <p class="text-muted">No activity yet</p>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var activity in Activities)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="bi @GetActivityIcon(activity.ActivityType)"></i>
                                                    @GetActivityVerb(activity.ActivityType)
                                                </h6>
                                                <p class="mb-1">@activity.Description</p>
                                                <small class="text-muted">
                                                    <i class="bi bi-folder"></i>
                                                    <a href="@activity.Url">@activity.Repository</a>
                                                </small>
                                            </div>
                                            <small class="text-muted">@FormatTimeAgo(activity.Timestamp)</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else if (ActiveTab == "repositories")
            {
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Repositories</h5>
                        <small class="text-muted">@VisibleRepos.Count() repositories</small>
                    </div>
                    @if (UserRepos.Count == 0)
                    {
                        <div class="card-body">
                            <p class="text-muted">No repositories yet</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var repo in VisibleRepos)
                            {
                                <a href="/repo/@repo.DisplayName" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="d-flex align-items-center mb-1">
                                                <h6 class="mb-0 text-primary fw-bold me-2">@repo.DisplayName</h6>
                                                <span class="badge rounded-pill border @(repo.IsPrivate ? "bg-warning bg-opacity-10 text-warning border-warning-subtle" : "text-muted") fw-normal px-2" style="font-size: 11px;">
                                                    @(repo.IsPrivate ? "Private" : "Public")
                                                </span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(repo.Description))
                                            {
                                                <p class="mb-1 small text-muted">@repo.Description</p>
                                            }
                                            else
                                            {
                                                <p class="mb-1 small text-muted fst-italic">@repo.LastCommitMessage</p>
                                            }
                                        </div>
                                        <small class="text-muted">@FormatTimeAgo(repo.LastCommitDate ?? DateTime.UtcNow)</small>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .contribution-day {
        background-color: #ebedf0;
    }
    .contribution-day.level-1 {
        background-color: #9be9a8;
    }
    .contribution-day.level-2 {
        background-color: #40c463;
    }
    .contribution-day.level-3 {
