    }
    [data-bs-theme="dark"] .contribution-day.level-1 {
        background-color: #0e4429;
    }
    [data-bs-theme="dark"] .contribution-day.level-2 {
        background-color: #006d32;
    }
    [data-bs-theme="dark"] .contribution-day.level-3 {
        background-color: #26a641;
    }
    [data-bs-theme="dark"] .contribution-day.level-4 {
        background-color: #39d353;
    }
</style>

@code {
    [Parameter]
    public string Username { get; set; } = "";

    private bool IsOwnProfile => UserService.IsLoggedIn && Username.Equals(UserService.Username, StringComparison.OrdinalIgnoreCase);

    private string ActiveTab = "overview";
    private UserProfileModel UserProfileData = new();
    private UserStatistics Statistics = new();
    private List<UserActivity> Activities = new();
    private List<ContributionDay> Contributions = new();
    private List<ProfileRepo> UserRepos = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        UserProfileData = await ProfileService.GetProfileAsync(Username);
        Statistics = await ProfileService.GetStatisticsAsync(Username);
        Activities = await ProfileService.GetActivityAsync(Username);
        Contributions = await ProfileService.GetContributionsAsync(Username);
        await LoadRepositories();
        Statistics.TotalRepositories = UserRepos.Count;
    }

    private async Task LoadRepositories()
    {
        UserRepos.Clear();
        var rootPath = "/repos";

        var systemSettings = await AdminService.GetSystemSettingsAsync();
        if (!string.IsNullOrEmpty(systemSettings.ProjectRoot) && Directory.Exists(systemSettings.ProjectRoot))
            rootPath = systemSettings.ProjectRoot;

        if (string.IsNullOrEmpty(rootPath) || !Directory.Exists(rootPath))
        {
            var configuredPath = Config["Git:ProjectRoot"];
            if (!string.IsNullOrEmpty(configuredPath) && Directory.Exists(configuredPath))
                rootPath = configuredPath;
        }

        if (!Directory.Exists(rootPath)) return;

        foreach (var dir in Directory.GetDirectories(rootPath))
        {
            if (!LibGit2Sharp.Repository.IsValid(dir)) continue;
            try
            {
                using var gitRepo = new LibGit2Sharp.Repository(dir);
                var latestCommit = gitRepo.Commits.FirstOrDefault();
                var repoName = System.IO.Path.GetFileName(dir);

                var meta = await RepoService.GetRepositoryAsync(repoName);
                UserRepos.Add(new ProfileRepo
                {
                    Name = repoName,
                    LastCommitMessage = latestCommit?.MessageShort ?? "No description provided.",
                    LastCommitDate = latestCommit?.Author.When.UtcDateTime,
                    IsPrivate = meta?.IsPrivate ?? false,
                    Description = meta?.Description ?? ""
                });
            }
            catch { }
        }
    }

    private IEnumerable<ProfileRepo> VisibleRepos =>
        UserRepos.Where(r => !r.IsPrivate || IsOwnProfile)
                 .OrderByDescending(r => r.LastCommitDate);

    private class ProfileRepo
    {
        public string Name { get; set; } = "";
        public string DisplayName => Name.EndsWith(".git") ? Name[..^4] : Name;
        public string LastCommitMessage { get; set; } = "";
        public DateTime? LastCommitDate { get; set; }
        public bool IsPrivate { get; set; }
        public string Description { get; set; } = "";
    }

    private string GetActivityIcon(string activityType)
    {
        return activityType.ToLower() switch
        {
            "commit" => "bi-git",
            "opened_pr" or "merged_pr" or "closed_pr" => "bi-arrow-left-right",
            "opened_issue" or "closed_issue" => "bi-exclamation-circle",
            "created_repo" => "bi-journal-plus",
            "forked_repo" => "bi-diagram-3",
            "starred_repo" => "bi-star-fill",
            "created_release" => "bi-tag",
            _ => "bi-circle"
        };
    }

    private string GetActivityVerb(string activityType)
    {
        return activityType.ToLower() switch
        {
            "commit" => "Pushed a commit",
            "opened_pr" => "Opened a pull request",
            "merged_pr" => "Merged a pull request",
            "closed_pr" => "Closed a pull request",
            "opened_issue" => "Opened an issue",
            "closed_issue" => "Closed an issue",
            "created_repo" => "Created a repository",
            "forked_repo" => "Forked a repository",
            "starred_repo" => "Starred a repository",
            "created_release" => "Published a release",
            _ => activityType
        };
    }

    private static Dictionary<int, string> BuildMonthLabels(DateTime graphStart)
    {
        var labels = new Dictionary<int, string>();
        var lastMonth = -1;
        for (int w = 0; w < 53; w++)
        {
            var weekStart = graphStart.AddDays(w * 7);
            if (weekStart.Month != lastMonth)
            {
                labels[w] = weekStart.ToString("MMM");
                lastMonth = weekStart.Month;
            }
        }
        return labels;
    }

    private string FormatTimeAgo(DateTime timestamp)
    {
        var span = DateTime.UtcNow - timestamp;
        if (span.TotalMinutes < 1) return "just now";
        if (span.TotalMinutes < 60) return $"{(int)span.TotalMinutes}m ago";
        if (span.TotalHours < 24) return $"{(int)span.TotalHours}h ago";
        if (span.TotalDays < 30) return $"{(int)span.TotalDays}d ago";
        return timestamp.ToString("MMM d, yyyy");
    }
}
