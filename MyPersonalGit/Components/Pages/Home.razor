                    @if (!string.IsNullOrEmpty(createError))
                    {
                        <div class="alert alert-danger py-2 px-3 small mt-2 mb-0">
                            <i class="bi bi-exclamation-triangle me-1"></i>@createError
                        </div>
                    }
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light btn-sm border px-3" @onclick="() => showModal = false" disabled="@isCreating">Cancel</button>
                    <button type="button" class="btn btn-gh-primary btn-sm shadow-sm" @onclick="CreateNewRepository" disabled="@(string.IsNullOrWhiteSpace(newRepoName) || isCreating)">
                        @if (isCreating)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            <span>Creating...</span>
                        }
                        else
                        {
                            <span>Create repository</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<RepoSummary> repositories = new();
    private List<MyPersonalGit.Models.UserActivity> recentActivities = new();
    private string searchTerm = "";
    private string RootPath = "/repos";

    private bool showModal = false;
    private string newRepoName = "";
    private string newRepoDescription = "";
    private bool newRepoIsPrivate = false;
    private string customRepoPath = "";

    // Upload-on-create state
    private const long maxFileSize = 50 * 1024 * 1024; // 50MB
    private List<(string Path, byte[] Data)> initFileData = new();
    private byte[]? initZipData;
    private string initZipName = "";
    private string createError = "";
    private bool isCreating = false;

    private IEnumerable<RepoSummary> FilteredRepos =>
        repositories.Where(r =>
            (string.IsNullOrEmpty(searchTerm) || r.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (!r.IsPrivate || (UserService.IsLoggedIn && r.Owner.Equals(UserService.Username, StringComparison.OrdinalIgnoreCase))))
                   .OrderByDescending(r => r.LastCommitDate);

    protected override async Task OnInitializedAsync()
    {
        await LoadRepositories();
        try { recentActivities = await ActivityService.GetRecentActivitiesAsync(20); } catch { }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Session is initialized by MainLayout via JS interop (localStorage),
            // but this page renders before that completes. Re-render once ready.
            try
            {
                var sessionId = await JS.InvokeAsync<string>("sessionHelper.get", "sessionId");
                if (!string.IsNullOrEmpty(sessionId))
                {
                    await UserService.InitializeFromSessionAsync(sessionId);
                    StateHasChanged();
                }
            }
            catch { }
        }
        if (showModal)
        {
            try { await JS.InvokeVoidAsync("folderUpload.setWebkitDirectory", "initFolderInput"); } catch { }
        }
    }

    private async Task LoadRepositories()
    {
        repositories.Clear();

        // Priority: 1) Admin UI saved setting, 2) appsettings config, 3) auto-detection
        var systemSettings = await AdminService.GetSystemSettingsAsync();
        if (!string.IsNullOrEmpty(systemSettings.ProjectRoot))
        {
            try
            {
                if (!Directory.Exists(systemSettings.ProjectRoot))
                    Directory.CreateDirectory(systemSettings.ProjectRoot);
                RootPath = systemSettings.ProjectRoot;
            }
            catch { /* path invalid or drive missing — fall through */ }
        }

        if (string.IsNullOrEmpty(RootPath))
        {
            var configuredPath = Config["Git:ProjectRoot"];
            if (!string.IsNullOrEmpty(configuredPath))
            {
                try
                {
                    if (!Directory.Exists(configuredPath))
                        Directory.CreateDirectory(configuredPath);
                    RootPath = configuredPath;
                }
                catch { /* fall through */ }
            }
            else
            {
                string userDocs = Path.Combine(Environment.GetFolderPath(Environment.SpecialFolder.UserProfile), "Documents");

                if (Directory.Exists("/repos"))
                {
                    RootPath = "/repos";
                }
                else if (Directory.Exists(Path.Combine(userDocs, "Repo")))
                {
                    RootPath = Path.Combine(userDocs, "Repo");
                }
                else
                {
                    RootPath = Path.Combine(userDocs, "Repos");
                    if (!Directory.Exists(RootPath)) Directory.CreateDirectory(RootPath);
                }
            }
        }

        // Collect all paths to scan (default + tracked)
        var pathsToScan = new List<string>();
        if (Directory.Exists(RootPath)) pathsToScan.Add(RootPath);

        var trackingFile = Path.Combine(RootPath, ".data", "tracked_paths.json");
        if (File.Exists(trackingFile))
        {
            try
            {
                var json = await File.ReadAllTextAsync(trackingFile);
                var tracked = System.Text.Json.JsonSerializer.Deserialize<List<string>>(json);
                if (tracked != null)
                {
                    foreach (var p in tracked)
                    {
                        if (Directory.Exists(p) && !pathsToScan.Contains(p, StringComparer.OrdinalIgnoreCase))
                            pathsToScan.Add(p);
                    }
                }
            }
            catch { }
        }

        foreach (var scanPath in pathsToScan)
        {
            var directories = Directory.GetDirectories(scanPath);
            foreach (var dir in directories)
            {
                if (Repository.IsValid(dir))
                {
                    try
                    {
                        using var gitRepo = new Repository(dir);
                        var latestCommit = gitRepo.Commits.FirstOrDefault();
                        var repoName = Path.GetFileName(dir);

                        var repoMeta = await RepoService.GetRepositoryAsync(repoName);
                        var isStarred = await RepoService.IsStarredAsync(repoName, UserService.Username);

                        repositories.Add(new RepoSummary
                        {
                            Name = repoName,
                            FullPath = dir,
                            LastCommitMessage = latestCommit?.MessageShort ?? "No description provided.",
                            LastCommitDate = latestCommit?.Author.When.DateTime,
                            Stars = repoMeta?.Stars ?? 0,
                            IsStarred = isStarred,
                            IsPrivate = repoMeta?.IsPrivate ?? false,
                            Description = repoMeta?.Description ?? "",
                            Owner = repoMeta?.Owner ?? "",
                            Forks = repoMeta?.Forks ?? 0
                        });
                    }
                    catch { }
                }
            }
        }
    }

    private void ShowCreateModal()
    {
        customRepoPath = RootPath;
        showModal = true;
    }

    private void ResetRepoPath() => customRepoPath = RootPath;

    private async Task HandleInitFolderSelected(InputFileChangeEventArgs e)
    {
        createError = "";
        initZipData = null;
        initZipName = "";
        initFileData.Clear();

        var files = e.GetMultipleFiles(10000).ToList();
        // Use a temp list so initFileData stays empty during reads.
        // This prevents Blazor from re-rendering away the InputFile element mid-read.
        var tempData = new List<(string Path, byte[] Data)>();

        try
        {
            var paths = await JS.InvokeAsync<string[]>("folderUpload.getRelativePaths", "initFolderInput");

            // Read .gitignore from uploaded folder if present
            var gitignorePatterns = new List<string>();
            if (paths != null && paths.Length > 0)
            {
                for (int i = 0; i < paths.Length && i < files.Count; i++)
                {
                    var fileName = System.IO.Path.GetFileName(paths[i]);
                    if (fileName.Equals(".gitignore", StringComparison.OrdinalIgnoreCase))
                    {
                        try
                        {
                            using var stream = files[i].OpenReadStream(maxFileSize);
                            using var reader = new StreamReader(stream);
                            var content = await reader.ReadToEndAsync();
                            gitignorePatterns = content.Split('\n', StringSplitOptions.RemoveEmptyEntries).ToList();
                        }
                        catch { }
                        break;
                    }
                }
            }

            // Read all file data into memory before updating state
            for (int i = 0; i < files.Count; i++)
            {
                var relativePath = (paths != null && i < paths.Length) ? paths[i] : files[i].Name;

                // Strip top-level folder prefix
                var slashIdx = relativePath.IndexOf('/');
                if (slashIdx >= 0) relativePath = relativePath.Substring(slashIdx + 1);
                if (string.IsNullOrEmpty(relativePath)) continue;

                if (ShouldIgnoreFile(relativePath, gitignorePatterns)) continue;
                if (files[i].Size > maxFileSize) continue;

                using var stream = files[i].OpenReadStream(maxFileSize);
                using var ms = new MemoryStream();
                await stream.CopyToAsync(ms);
                tempData.Add((relativePath, ms.ToArray()));
            }

            // Assign all at once after reading is complete
            initFileData = tempData;
        }
        catch (Exception ex)
        {
            // Keep whatever was read successfully
            if (tempData.Any())
                initFileData = tempData;
            createError = $"Error reading files: {ex.Message}";
        }
        StateHasChanged();
    }

    private async Task HandleInitZipSelected(InputFileChangeEventArgs e)
    {
        createError = "";
        initFileData.Clear();

        try
        {
            initZipName = e.File.Name;
            using var stream = e.File.OpenReadStream(maxFileSize * 20);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            initZipData = ms.ToArray();
        }
        catch (Exception ex)
        {
            createError = $"Error reading zip: {ex.Message}";
            initZipData = null;
            initZipName = "";
        }
        StateHasChanged();
    }

    private void ClearInitFiles()
    {
        initFileData.Clear();
        initZipData = null;
        initZipName = "";
        createError = "";
    }

    private static string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F1} MB";
    }

    private string GetFullRepoPath()
    {
        var basePath = string.IsNullOrWhiteSpace(customRepoPath) ? RootPath : customRepoPath;
        var folderName = string.IsNullOrWhiteSpace(newRepoName) ? "repo-name.git" :
            (newRepoName.EndsWith(".git") ? newRepoName : $"{newRepoName}.git");
        return Path.Combine(basePath, folderName);
    }

    private async Task CreateNewRepository()
    {
        if (!UserService.IsLoggedIn) return;
        if (string.IsNullOrWhiteSpace(newRepoName)) return;

        isCreating = true;
        createError = "";
        StateHasChanged();

        try
        {
            var basePath = string.IsNullOrWhiteSpace(customRepoPath) ? RootPath : customRepoPath;
            var repoNameClean = newRepoName.EndsWith(".git") ? newRepoName[..^4] : newRepoName;
            var folderName = $"{repoNameClean}.git";

            // Prevent double-nesting: if basePath already ends with the repo name, use parent
            var baseDir = Path.GetFileName(basePath.TrimEnd(Path.DirectorySeparatorChar, Path.AltDirectorySeparatorChar));
            if (baseDir.Equals(repoNameClean, StringComparison.OrdinalIgnoreCase) ||
                baseDir.Equals(folderName, StringComparison.OrdinalIgnoreCase))
            {
                basePath = Path.GetDirectoryName(basePath)!;
            }

            // Ensure the base directory exists
            if (!Directory.Exists(basePath))
                Directory.CreateDirectory(basePath);

            var fullPath = Path.Combine(basePath, folderName);

            if (Directory.Exists(fullPath))
            {
                createError = "A repository with that name already exists.";
                return;
            }

            Repository.Init(fullPath, isBare: true);

            // Create DB record for repository metadata
            await RepoService.CreateRepositoryAsync(folderName, UserService.Username, newRepoDescription, newRepoIsPrivate);

            // Commit uploaded files if any
            if (initFileData.Any())
            {
                CommitFolderToNewRepo(fullPath);
            }
            else if (initZipData != null)
            {
                CommitZipToNewRepo(fullPath);
            }

            // If using a non-default path, add it to tracked paths
            if (basePath != RootPath)
            {
                await SaveTrackedPathAsync(basePath);
            }

            showModal = false;
            var repoNameWithoutGit = newRepoName.Replace(".git", "");
            newRepoName = "";
            newRepoDescription = "";
            newRepoIsPrivate = false;
            ClearInitFiles();
            Nav.NavigateTo($"/repo/{repoNameWithoutGit}");
        }
        catch (Exception ex)
        {
            createError = $"Error creating repository: {ex.Message}";
        }
        finally
        {
            isCreating = false;
            StateHasChanged();
        }
    }

    private void CommitFolderToNewRepo(string repoPath)
    {
        using var repo = new Repository(repoPath);
        var author = new Signature(UserService.Username, UserService.Email, DateTimeOffset.Now);
        var treeDef = new TreeDefinition();

        foreach (var (relativePath, data) in initFileData)
        {
            using var ms = new MemoryStream(data);
            var blob = repo.ObjectDatabase.CreateBlob(ms);
            treeDef.Add(relativePath, blob, Mode.NonExecutableFile);
        }

        var tree = repo.ObjectDatabase.CreateTree(treeDef);
        var commit = repo.ObjectDatabase.CreateCommit(author, author, "Initial commit", tree, Array.Empty<Commit>(), true);
        repo.Branches.Add("main", commit);
        repo.Refs.UpdateTarget("HEAD", "refs/heads/main");
    }

    private void CommitZipToNewRepo(string repoPath)
    {
        using var repo = new Repository(repoPath);
        var author = new Signature(UserService.Username, UserService.Email, DateTimeOffset.Now);
        var treeDef = new TreeDefinition();

        using var zipMs = new MemoryStream(initZipData!);
        using var archive = new ZipArchive(zipMs, ZipArchiveMode.Read);

        // Detect if all entries share a common root folder (typical for GitHub zip downloads)
        var entries = archive.Entries.Where(e => !string.IsNullOrEmpty(e.Name)).ToList();
        var commonPrefix = "";
        if (entries.Count > 0)
        {
            var firstPath = entries[0].FullName;
            var slashIdx = firstPath.IndexOf('/');
            if (slashIdx > 0)
            {
                var candidate = firstPath.Substring(0, slashIdx + 1);
                if (entries.All(e => e.FullName.StartsWith(candidate)))
                    commonPrefix = candidate;
            }
        }

        var gitignorePatterns = new List<string>();
        var gitignoreEntry = entries.FirstOrDefault(e =>
        {
            var path = e.FullName;
            if (!string.IsNullOrEmpty(commonPrefix)) path = path.Substring(commonPrefix.Length);
            return path.Equals(".gitignore", StringComparison.OrdinalIgnoreCase);
        });
        if (gitignoreEntry != null)
        {
            using var gs = gitignoreEntry.Open();
            using var reader = new StreamReader(gs);
            var content = reader.ReadToEnd();
            gitignorePatterns = content.Split('\n', StringSplitOptions.RemoveEmptyEntries).ToList();
        }

        foreach (var entry in entries)
        {
            var relativePath = entry.FullName;
            if (!string.IsNullOrEmpty(commonPrefix))
                relativePath = relativePath.Substring(commonPrefix.Length);

            if (string.IsNullOrEmpty(relativePath)) continue;
            if (ShouldIgnoreFile(relativePath, gitignorePatterns)) continue;

            using var entryStream = entry.Open();
            using var ms = new MemoryStream();
            entryStream.CopyTo(ms);
            ms.Position = 0;

            var blob = repo.ObjectDatabase.CreateBlob(ms);
            treeDef.Add(relativePath, blob, Mode.NonExecutableFile);
        }

        var tree = repo.ObjectDatabase.CreateTree(treeDef);
        var commit = repo.ObjectDatabase.CreateCommit(author, author, "Initial commit", tree, Array.Empty<Commit>(), true);
        repo.Branches.Add("main", commit);
        repo.Refs.UpdateTarget("HEAD", "refs/heads/main");
    }

    private async Task SaveTrackedPathAsync(string path)
    {
        var trackingFile = Path.Combine(RootPath, ".data", "tracked_paths.json");
        var paths = new List<string>();

        if (File.Exists(trackingFile))
        {
            try
            {
                var json = await File.ReadAllTextAsync(trackingFile);
                paths = System.Text.Json.JsonSerializer.Deserialize<List<string>>(json) ?? new();
            }
            catch { }
        }

        if (!paths.Contains(path, StringComparer.OrdinalIgnoreCase))
        {
            paths.Add(path);
            Directory.CreateDirectory(Path.GetDirectoryName(trackingFile)!);
            await File.WriteAllTextAsync(trackingFile, System.Text.Json.JsonSerializer.Serialize(paths, new System.Text.Json.JsonSerializerOptions { WriteIndented = true }));
        }
    }

    private async Task ToggleStar(RepoSummary repo)
    {
        if (!UserService.IsLoggedIn) return;
        // Ensure repo record exists in DB before star operations
        await RepoService.EnsureRepositoryRecordAsync(repo.Name, UserService.Username);
        if (repo.IsStarred)
        {
            await RepoService.UnstarRepositoryAsync(repo.Name, UserService.Username);
            repo.IsStarred = false;
            repo.Stars--;
        }
        else
        {
            await RepoService.StarRepositoryAsync(repo.Name, UserService.Username);
            repo.IsStarred = true;
            repo.Stars++;
        }
        StateHasChanged();
    }

    private string GetRelativeTime(DateTime? date)
    {
        if (!date.HasValue) return "just now";
        var span = DateTime.UtcNow - date.Value;
        if (span.TotalDays > 365) return $"{(int)(span.TotalDays / 365)} year{((int)(span.TotalDays / 365) != 1 ? "s" : "")} ago";
        if (span.TotalDays > 30) return date.Value.ToString("MMM dd, yyyy");
        if (span.TotalDays > 1) return $"{(int)span.TotalDays} days ago";
        if (span.TotalDays > 0.9) return "yesterday";
        if (span.TotalHours > 1) return $"{(int)span.TotalHours} hours ago";
        if (span.TotalMinutes > 1) return $"{(int)span.TotalMinutes} minutes ago";
        return "just now";
    }

    private static readonly string[] DefaultIgnorePatterns = new[]
    {
        ".git/", "bin/", "obj/", "node_modules/", ".vs/", ".idea/",
        "__pycache__/", ".DS_Store", "Thumbs.db",
        "*.suo", "*.user", "*.userosscache", "*.sln.docstates",
        "packages/", "dist/", "build/", ".next/"
    };

    private static bool ShouldIgnoreFile(string relativePath, List<string> gitignorePatterns)
    {
        var normalized = relativePath.Replace('\\', '/');
        var segments = normalized.Split('/');

        foreach (var pattern in DefaultIgnorePatterns)
        {
            var p = pattern.Replace('\\', '/');
            if (p.EndsWith("/"))
            {
                var dirName = p.TrimEnd('/');
                if (segments.Any(s => s.Equals(dirName, StringComparison.OrdinalIgnoreCase)))
                    return true;
            }
            else if (p.StartsWith("*."))
            {
                var ext = p.Substring(1);
                if (normalized.EndsWith(ext, StringComparison.OrdinalIgnoreCase))
                    return true;
            }
            else
            {
                var fileName = segments.Last();
                if (fileName.Equals(p, StringComparison.OrdinalIgnoreCase))
                    return true;
            }
        }

        foreach (var pattern in gitignorePatterns)
        {
            var p = pattern.Trim();
            if (string.IsNullOrEmpty(p) || p.StartsWith("#")) continue;

            var cleanPattern = p.TrimEnd('/');
            if (p.EndsWith("/"))
            {
                if (segments.Any(s => s.Equals(cleanPattern, StringComparison.OrdinalIgnoreCase)))
                    return true;
            }
            else if (p.StartsWith("*."))
            {
                var ext = p.Substring(1);
                if (normalized.EndsWith(ext, StringComparison.OrdinalIgnoreCase))
                    return true;
            }
            else if (p.Contains('/'))
            {
                if (normalized.StartsWith(cleanPattern, StringComparison.OrdinalIgnoreCase) ||
                    normalized.Contains("/" + cleanPattern, StringComparison.OrdinalIgnoreCase))
                    return true;
            }
            else
            {
                if (segments.Any(s => s.Equals(cleanPattern, StringComparison.OrdinalIgnoreCase)))
                    return true;
            }
        }

        return false;
    }

