@page "/repo/{RepoName}/pulls"
@page "/repo/{RepoName}/pull/{Number:int}"
@using MyPersonalGit.Models
@using MyPersonalGit.Data
@using LibGit2Sharp
@using System.Text.RegularExpressions
@using Markdig
@using Markdig.Syntax
@using Markdig.Syntax.Inlines
@inject IPullRequestService PRService
@inject IConfiguration Config
@inject IAdminService AdminService
@inject NavigationManager Nav
@using MyPersonalGit.Services
@inject CurrentUserService UserService
@rendermode InteractiveServer

<PageTitle>Pull Requests · @RepoName</PageTitle>

<div class="repo-header border-bottom bg-light-subtle mb-4 pt-3">
    <div class="container-xl px-3">
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-journal-bookmark text-muted me-2 h4 mb-0"></i>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 h4">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Repositories</a></li>
                    <li class="breadcrumb-item"><a href="/repo/@RepoName" class="text-decoration-none">@RepoName</a></li>
                    <li class="breadcrumb-item active fw-bold" aria-current="page">Pull Requests</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container-xl px-3">
    @if (Number.HasValue)
    {
        @if (currentPR != null)
        {
            <div class="pr-detail">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="flex-grow-1">
                        <h1 class="h3 mb-2">
                            @currentPR.Title
                            <span class="text-muted fw-normal">#@currentPR.Number</span>
                        </h1>
                        <div class="d-flex gap-2 align-items-center">
                            @if (currentPR.State == PullRequestState.Open)
                            {
                                <span class="badge bg-success d-flex align-items-center gap-1">
                                    <i class="bi bi-git"></i> Open
                                </span>
                            }
                            else if (currentPR.State == PullRequestState.Merged)
                            {
                                <span class="badge bg-primary d-flex align-items-center gap-1">
                                    <i class="bi bi-check2-all"></i> Merged
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger d-flex align-items-center gap-1">
                                    <i class="bi bi-x-circle"></i> Closed
                                </span>
                            }
                            <span class="text-muted small">
                                <strong>@currentPR.Author</strong> wants to merge from
                                <code class="bg-light px-2 py-1 rounded">@currentPR.SourceBranch</code> into
                                <code class="bg-light px-2 py-1 rounded">@currentPR.TargetBranch</code>
                            </span>
                            <a href="/repo/@RepoName/compare/@(currentPR.TargetBranch)...@(currentPR.SourceBranch)" class="btn btn-sm btn-outline-secondary ms-2">
                                <i class="bi bi-arrow-left-right me-1"></i> View comparison
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Merge section for open PRs -->
                @if (UserService.IsLoggedIn && currentPR.State == PullRequestState.Open)
                {
                    <div class="card mb-3 @(canMerge ? "border-success" : mergeReason != null ? "border-warning" : "")">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(mergeError))
                            {
                                <div class="alert alert-danger py-2 mb-2">
                                    <i class="bi bi-exclamation-triangle me-1"></i> @mergeError
                                </div>
                            }
                            @if (!canMerge && mergeReason != null)
                            {
                                <div class="alert alert-warning py-2 mb-2">
                                    <i class="bi bi-exclamation-triangle me-1"></i> @mergeReason
                                </div>
                            }
                            <div class="d-flex align-items-center gap-2">
                                <select class="form-select form-select-sm" style="width: auto;" @bind="selectedStrategy">
                                    <option value="@MergeStrategy.MergeCommit">Create a merge commit</option>
                                    <option value="@MergeStrategy.Squash">Squash and merge</option>
                                    <option value="@MergeStrategy.Rebase">Rebase and merge</option>
                                </select>
                                <button class="btn btn-success btn-sm" @onclick="MergePR" disabled="@(!canMerge || isMerging)">
                                    @if (isMerging)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <i class="bi bi-check2-all me-1"></i> Merge pull request
                                </button>
                                <button class="btn btn-outline-danger btn-sm" @onclick="ClosePR">
                                    <i class="bi bi-x-circle me-1"></i> Close
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-9">
                        <ul class="nav nav-tabs mb-3">
                            <li class="nav-item">
                                <button class="nav-link @(activeTab == "conversation" ? "active" : "")" @onclick='() => SetTab("conversation")'>
                                    <i class="bi bi-chat-left me-1"></i> Conversation
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link @(activeTab == "commits" ? "active" : "")" @onclick='() => SetTab("commits")'>
                                    <i class="bi bi-clock-history me-1"></i> Commits
                                    @if (prCommits.Any())
                                    {
                                        <span class="badge bg-secondary bg-opacity-25 ms-1">@prCommits.Count</span>
                                    }
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link @(activeTab == "files" ? "active" : "")" @onclick='() => SetTab("files")'>
                                    <i class="bi bi-file-diff me-1"></i> Files changed
                                    @if (filePatches.Any())
                                    {
                                        <span class="badge bg-secondary bg-opacity-25 ms-1">@filePatches.Count</span>
                                    }
                                </button>
                            </li>
                        </ul>

                        @if (activeTab == "conversation")
                        {
                            <div class="card mb-3">
                                <div class="card-header bg-light d-flex align-items-center gap-2">
                                    <i class="bi bi-person-circle"></i>
                                    <strong>@currentPR.Author</strong>
                                    <span class="text-muted small">commented @FormatDate(currentPR.CreatedAt)</span>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrWhiteSpace(currentPR.Body))
                                    {
                                        <div class="markdown-body">@((MarkupString)RenderMarkdown(currentPR.Body))</div>
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic">No description provided.</p>
                                    }
                                </div>
                            </div>

                            @foreach (var review in currentPR.Reviews)
                            {
                                <div class="card mb-3 @GetReviewCardClass(review.State)">
                                    <div class="card-header d-flex align-items-center gap-2">
                                        <i class="bi bi-person-circle"></i>
                                        <strong>@review.Author</strong>
                                        <span class="text-muted small">@GetReviewStateText(review.State) @FormatDate(review.CreatedAt)</span>
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(review.Body))
                                    {
                                        <div class="card-body">
                                            <div class="markdown-body">@((MarkupString)RenderMarkdown(review.Body))</div>
                                        </div>
                                    }
                                </div>
                            }

                            @foreach (var comment in currentPR.Comments)
                            {
                                <div class="card mb-3">
                                    <div class="card-header bg-light d-flex align-items-center gap-2">
                                        <i class="bi bi-person-circle"></i>
                                        <strong>@comment.Author</strong>
                                        <span class="text-muted small">commented @FormatDate(comment.CreatedAt)</span>
                                    </div>
                                    <div class="card-body">
                                        <div class="markdown-body">@((MarkupString)RenderMarkdown(comment.Body))</div>
                                    </div>
                                </div>
                            }

                            @if (UserService.IsLoggedIn && currentPR.State == PullRequestState.Open)
                            {
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <strong>Review changes</strong>
                                    </div>
                                    <div class="card-body">
                                        <textarea class="form-control mb-2" rows="4" @bind="reviewBody" placeholder="Leave a review comment"></textarea>
                                        <div class="btn-group">
                                            <button class="btn btn-success btn-sm" @onclick='() => SubmitReview(ReviewState.Approved)'>
                                                <i class="bi bi-check-circle me-1"></i> Approve
                                            </button>
                                            <button class="btn btn-warning btn-sm" @onclick='() => SubmitReview(ReviewState.ChangesRequested)'>
                                                <i class="bi bi-x-circle me-1"></i> Request changes
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick='() => SubmitReview(ReviewState.Commented)'>
                                                <i class="bi bi-chat-left me-1"></i> Comment
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else if (activeTab == "commits")
                        {
                            @if (prCommits.Any())
                            {
                                <div class="list-group list-group-flush border rounded-3 overflow-hidden">
                                    @foreach (var c in prCommits)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center py-2 px-3">
                                            <div>
                                                <span class="fw-semibold small">@c.MessageShort</span>
                                                <span class="text-muted small ms-2">@c.Author.Name · @FormatDate(c.Author.When.DateTime)</span>
                                            </div>
                                            <code class="small text-muted">@c.Id.ToString(7)</code>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No commits found between <code>@currentPR.TargetBranch</code> and <code>@currentPR.SourceBranch</code>.
                                </div>
                            }
                        }
                        else if (activeTab == "files")
                        {
                            @if (filePatches.Any())
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted small">
                                        Showing <strong>@filePatches.Count</strong> changed file@(filePatches.Count != 1 ? "s" : "")
                                        with <span class="text-success fw-bold">@totalAdded additions</span> and
                                        <span class="text-danger fw-bold">@totalDeleted deletions</span>
                                    </span>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn @(diffMode == "unified" ? "btn-secondary" : "btn-outline-secondary")" @onclick='() => diffMode = "unified"'>Unified</button>
                                        <button class="btn @(diffMode == "split" ? "btn-secondary" : "btn-outline-secondary")" @onclick='() => diffMode = "split"'>Split</button>
                                    </div>
                                </div>

                                @foreach (var patch in filePatches)
                                {
                                    <div class="border rounded-3 mb-3 overflow-hidden">
                                        <div class="d-flex justify-content-between align-items-center px-3 py-2 bg-light-subtle border-bottom">
                                            <span class="font-monospace small fw-semibold">@patch.Path</span>
                                            <div>
                                                <span class="badge bg-success bg-opacity-10 text-success me-1">+@patch.LinesAdded</span>
                                                <span class="badge bg-danger bg-opacity-10 text-danger">-@patch.LinesDeleted</span>
                                            </div>
                                        </div>
                                        <div class="overflow-auto" style="max-height: 600px;">
                                            @if (diffMode == "unified")
                                            {
                                                <table class="table table-sm table-borderless mb-0 font-monospace" style="font-size: 12px;">
                                                    <tbody>
                                                        @foreach (var row in GetUnifiedDiffRows(patch.DiffLines))
                                                        {
                                                            <tr class="@row.CssClass diff-line">
                                                                <td class="text-muted px-2 text-end diff-linenum" style="width: 50px; user-select: none;">@row.OldNum</td>
                                                                <td class="text-muted px-2 text-end diff-linenum" style="width: 50px; user-select: none;">@row.NewNum</td>
                                                                <td class="px-1 diff-sign" style="width: 20px; user-select: none;">@(row.Sign == ' ' ? "" : row.Sign.ToString())</td>
                                                                <td class="px-2 diff-text" style="white-space: pre-wrap; word-break: break-all;">@row.Content</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                            else
                                            {
                                                <table class="table table-sm table-borderless mb-0 font-monospace" style="font-size: 12px;">
                                                    <tbody>
                                                        @foreach (var pair in GetSplitDiffWithLineNumbers(patch.DiffLines))
                                                        {
                                                            <tr class="diff-line">
                                                                <td class="text-muted text-end px-1 diff-linenum @(pair.Left != null && pair.Left.StartsWith("-") ? "diff-removed" : "diff-context")" style="width: 40px; user-select: none;">@(pair.LeftLineNum > 0 ? pair.LeftLineNum.ToString() : "")</td>
                                                                <td class="px-2 @(pair.Left == null ? "diff-empty" : pair.Left.StartsWith("-") ? "diff-removed" : "diff-context")" style="width: 50%; white-space: pre-wrap; word-break: break-all;">@(pair.Left != null && pair.Left.Length > 1 ? pair.Left.Substring(1) : pair.Left ?? "")</td>
                                                                <td class="text-muted text-end px-1 diff-linenum @(pair.Right != null && pair.Right.StartsWith("+") ? "diff-added" : "diff-context")" style="width: 40px; user-select: none;">@(pair.RightLineNum > 0 ? pair.RightLineNum.ToString() : "")</td>
                                                                <td class="px-2 @(pair.Right == null ? "diff-empty" : pair.Right.StartsWith("+") ? "diff-added" : "diff-context")" style="width: 50%; white-space: pre-wrap; word-break: break-all;">@(pair.Right != null && pair.Right.Length > 1 ? pair.Right.Substring(1) : pair.Right ?? "")</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No file changes found between <code>@currentPR.TargetBranch</code> and <code>@currentPR.SourceBranch</code>.
                                </div>
                            }
                        }
                    </div>

                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Reviewers</h6>
                                @if (currentPR.Reviewers.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var reviewer in currentPR.Reviewers)
                                        {
                                            <li><i class="bi bi-person"></i> @reviewer</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted small">No reviewers assigned</p>
                                }

                                <hr />

                                <h6 class="card-title">Labels</h6>
                                @if (currentPR.Labels.Any())
                                {
                                    @foreach (var label in currentPR.Labels)
                                    {
                                        <span class="badge bg-primary me-1 mb-1">@label</span>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted small">No labels</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning">Pull Request #@Number not found.</div>
        }
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="btn-group">
                <button class="btn @(filterState == "open" ? "btn-dark" : "btn-outline-secondary") btn-sm" @onclick='() => filterState = "open"'>
                    <i class="bi bi-git me-1"></i> @openCount Open
                </button>
                <button class="btn @(filterState == "closed" ? "btn-dark" : "btn-outline-secondary") btn-sm" @onclick='() => filterState = "closed"'>
                    <i class="bi bi-x-circle me-1"></i> @closedCount Closed
                </button>
                <button class="btn @(filterState == "merged" ? "btn-dark" : "btn-outline-secondary") btn-sm" @onclick='() => filterState = "merged"'>
                    <i class="bi bi-check2-all me-1"></i> @mergedCount Merged
                </button>
            </div>
            @if (UserService.IsLoggedIn)
            {
                <button class="btn btn-success btn-sm" @onclick="() => showNewPRModal = true">
                    <i class="bi bi-plus-circle me-1"></i> New pull request
                </button>
            }
        </div>

        @if (filteredPRs.Any())
        {
            <div class="list-group">
                @foreach (var pr in filteredPRs)
                {
                    <a href="/repo/@RepoName/pull/@pr.Number" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    @if (pr.State == PullRequestState.Open)
                                    {
                                        <i class="bi bi-git text-success"></i>
                                    }
                                    else if (pr.State == PullRequestState.Merged)
                                    {
                                        <i class="bi bi-check2-all text-primary"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger"></i>
                                    }
                                    <h6 class="mb-0">@pr.Title</h6>
                                    @if (pr.IsDraft)
                                    {
                                        <span class="badge bg-secondary" style="font-size: 10px;">Draft</span>
                                    }
                                    @foreach (var label in pr.Labels)
                                    {
                                        <span class="badge bg-primary" style="font-size: 10px;">@label</span>
                                    }
                                </div>
                                <small class="text-muted">
                                    #@pr.Number opened @FormatDate(pr.CreatedAt) by @pr.Author
                                    · <code class="small">@pr.SourceBranch</code> → <code class="small">@pr.TargetBranch</code>
                                </small>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="blankslate p-5 border rounded-3 bg-light text-center">
                <i class="bi bi-git display-4 text-muted mb-3"></i>
                <h3 class="h5">No @filterState pull requests</h3>
                <p class="text-muted">There are no @filterState pull requests for this repository.</p>
            </div>
        }
    }
</div>

@if (showNewPRModal)
{
    <div class="modal show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Pull Request</h5>
                    <button type="button" class="btn-close" @onclick="() => showNewPRModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Title</label>
                        <input type="text" class="form-control" @bind="newPRTitle" placeholder="Pull request title" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <textarea class="form-control" rows="6" @bind="newPRBody" placeholder="Describe your changes"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Source Branch</label>
                            <select class="form-select" @bind="newPRSourceBranch">
                                <option value="">Select branch...</option>
                                @foreach (var branch in branches)
                                {
                                    <option value="@branch">@branch</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Target Branch</label>
                            <select class="form-select" @bind="newPRTargetBranch">
                                <option value="">Select branch...</option>
                                @foreach (var branch in branches)
                                {
                                    <option value="@branch">@branch</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="newPRIsDraft" id="draftCheck">
                        <label class="form-check-label" for="draftCheck">
                            Create as draft
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showNewPRModal = false">Cancel</button>
                    <button type="button" class="btn btn-success" @onclick="CreatePR"
                            disabled="@(string.IsNullOrWhiteSpace(newPRTitle) || string.IsNullOrWhiteSpace(newPRSourceBranch) || string.IsNullOrWhiteSpace(newPRTargetBranch))">
                        <i class="bi bi-plus-circle me-1"></i> Create pull request
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .diff-added { background-color: var(--diff-added-bg, #e6ffec); color: var(--diff-added-fg, #1f883d); }
    .diff-removed { background-color: var(--diff-removed-bg, #fff1f0); color: var(--diff-removed-fg, #cf222e); }
    .diff-context { background-color: var(--diff-context-bg, white); color: var(--diff-context-fg, #1f2328); }
    .diff-empty { background-color: var(--diff-empty-bg, #f6f8fa); }
    .diff-line { border-bottom: 1px solid var(--gh-border, #f0f0f0); min-height: 20px; }
    .diff-sign { opacity: 0.6; }
    .diff-linenum { font-size: 11px; }
    .diff-hunk .diff-text { font-style: italic; font-size: 11px; }
    .markdown-body h1, .markdown-body h2 { border-bottom: 1px solid #d0d7de; padding-bottom: 0.3em; margin-top: 24px; margin-bottom: 16px; font-weight: 600; }
    .markdown-body h3, .markdown-body h4, .markdown-body h5, .markdown-body h6 { margin-top: 24px; margin-bottom: 16px; font-weight: 600; line-height: 1.25; }
    .markdown-body p { margin-bottom: 16px; }
    .markdown-body ul { padding-left: 2em; list-style-type: disc; margin-bottom: 16px; }
    .markdown-body ol { padding-left: 2em; list-style-type: decimal; margin-bottom: 16px; }
    .markdown-body li + li { margin-top: 0.25em; }
    .markdown-body code { padding: 0.2em 0.4em; font-size: 85%; background-color: rgba(175,184,193,0.2); border-radius: 6px; }
    .markdown-body pre { padding: 16px; overflow: auto; font-size: 85%; line-height: 1.45; background-color: #f6f8fa; border-radius: 6px; margin-bottom: 16px; }
    .markdown-body pre code { padding: 0; margin: 0; font-size: 100%; background-color: transparent; border-radius: 0; white-space: pre; }
    .markdown-body blockquote { padding: 0 1em; color: #656d76; border-left: 0.25em solid #d0d7de; margin-bottom: 16px; }
    .markdown-body table { display: block; width: max-content; max-width: 100%; overflow: auto; border-spacing: 0; border-collapse: collapse; margin-bottom: 16px; }
    .markdown-body table tr { background-color: #ffffff; border-top: 1px solid #d8dee4; }
    .markdown-body table tr:nth-child(2n) { background-color: #f6f8fa; }
    .markdown-body table th, .markdown-body table td { padding: 6px 13px; border: 1px solid #d0d7de; }
    .markdown-body img { max-width: 100%; }
    .markdown-body hr { height: 0.25em; padding: 0; margin: 24px 0; background-color: #d0d7de; border: 0; }
    .markdown-body a { color: #0969da; text-decoration: none; }
    .markdown-body a:hover { text-decoration: underline; }
    .markdown-body .task-list-item { list-style-type: none; margin-left: -1.5em; }
    .markdown-body .task-list-item input[type="checkbox"] { margin-right: 0.5em; }
    [data-bs-theme="dark"] .markdown-body pre { background-color: #161b22; }
    [data-bs-theme="dark"] .markdown-body code { background-color: rgba(110,118,129,0.4); }
    [data-bs-theme="dark"] .markdown-body blockquote { color: #8b949e; border-left-color: #30363d; }
