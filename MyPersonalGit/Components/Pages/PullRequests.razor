@code {
    [Parameter] public string RepoName { get; set; } = "";
    [Parameter] public int? Number { get; set; }

    private List<PullRequest> prs = new();
    private PullRequest? currentPR;
    private string filterState = "open";
    private string activeTab = "conversation";
    private bool showNewPRModal = false;
    private List<string> branches = new();
    private string diffMode = "unified";

    private string newPRTitle = "";
    private string newPRBody = "";
    private string newPRSourceBranch = "";
    private string newPRTargetBranch = "";
    private bool newPRIsDraft = false;
    private string reviewBody = "";

    // Merge state
    private MergeStrategy selectedStrategy = MergeStrategy.MergeCommit;
    private bool canMerge;
    private string? mergeReason;
    private string mergeError = "";
    private bool isMerging;

    // Commits & diff state
    private List<Commit> prCommits = new();
    private List<FilePatch> filePatches = new();
    private int totalAdded;
    private int totalDeleted;

    private static readonly MarkdownPipeline _mdPipeline = new MarkdownPipelineBuilder()
        .UseAdvancedExtensions()
        .Build();

    private List<PullRequest> filteredPRs => prs
        .Where(pr => filterState switch
        {
            "open" => pr.State == PullRequestState.Open,
            "closed" => pr.State == PullRequestState.Closed,
            "merged" => pr.State == PullRequestState.Merged,
            _ => true
        })
        .OrderByDescending(pr => pr.CreatedAt)
        .ToList();

    private int openCount => prs.Count(pr => pr.State == PullRequestState.Open);
    private int closedCount => prs.Count(pr => pr.State == PullRequestState.Closed);
    private int mergedCount => prs.Count(pr => pr.State == PullRequestState.Merged);

    protected override async Task OnParametersSetAsync()
    {
        await LoadPRs();
        await LoadBranches();
        if (currentPR != null)
        {
            LoadPRCommitsAndDiff();
            if (currentPR.State == PullRequestState.Open)
            {
                var (cm, reason) = await PRService.CanMergeAsync(RepoName, currentPR.Number);
                canMerge = cm;
                mergeReason = reason;
            }
        }
    }

    private async Task LoadPRs()
    {
        prs = await PRService.GetPullRequestsAsync(RepoName);
        if (Number.HasValue)
        {
            currentPR = await PRService.GetPullRequestAsync(RepoName, Number.Value);
        }
    }

    private async Task LoadBranches()
    {
        try
        {
            var repoPath = await GetRepoPath();
            if (repoPath != null && LibGit2Sharp.Repository.IsValid(repoPath))
            {
                using var repo = new LibGit2Sharp.Repository(repoPath);
                branches = repo.Branches.Where(b => !b.IsRemote).Select(b => b.FriendlyName).ToList();
            }
        }
        catch { }
    }

    private void LoadPRCommitsAndDiff()
    {
        if (currentPR == null) return;
        prCommits.Clear();
        filePatches.Clear();
        totalAdded = 0;
        totalDeleted = 0;

        try
        {
            var repoPath = GetRepoPathSync();
            if (repoPath == null || !LibGit2Sharp.Repository.IsValid(repoPath)) return;

            using var repo = new LibGit2Sharp.Repository(repoPath);
            var sourceBranch = repo.Branches[currentPR.SourceBranch];
            var targetBranch = repo.Branches[currentPR.TargetBranch];
            if (sourceBranch?.Tip == null || targetBranch?.Tip == null) return;

            // Commits unique to source
            var filter = new CommitFilter
            {
                IncludeReachableFrom = sourceBranch.Tip,
                ExcludeReachableFrom = targetBranch.Tip,
                SortBy = CommitSortStrategies.Topological | CommitSortStrategies.Time
            };
            prCommits = repo.Commits.QueryBy(filter).ToList();

            // Diff
            var diff = repo.Diff.Compare<Patch>(targetBranch.Tip.Tree, sourceBranch.Tip.Tree);
            foreach (var change in diff)
            {
                var lines = change.Patch.Split('\n').ToList();
                var added = lines.Count(l => l.StartsWith("+") && !l.StartsWith("+++"));
                var deleted = lines.Count(l => l.StartsWith("-") && !l.StartsWith("---"));
                filePatches.Add(new FilePatch
                {
                    Path = change.Path,
                    LinesAdded = added,
                    LinesDeleted = deleted,
                    DiffLines = lines
                });
                totalAdded += added;
                totalDeleted += deleted;
            }
        }
        catch { }
    }

    private void SetTab(string tab)
    {
        activeTab = tab;
    }

    private async Task CreatePR()
    {
        if (!UserService.IsLoggedIn) return;
        var pr = await PRService.CreatePullRequestAsync(
            RepoName, newPRTitle, newPRBody, UserService.Username,
            newPRSourceBranch, newPRTargetBranch, newPRIsDraft);

        newPRTitle = "";
        newPRBody = "";
        newPRSourceBranch = "";
        newPRTargetBranch = "";
        newPRIsDraft = false;
        showNewPRModal = false;

        Nav.NavigateTo($"/repo/{RepoName}/pull/{pr.Number}");
    }

    private async Task SubmitReview(ReviewState state)
    {
        if (!UserService.IsLoggedIn) return;
        if (Number.HasValue)
        {
            await PRService.AddReviewAsync(RepoName, Number.Value, UserService.Username, state, reviewBody);
            reviewBody = "";
            await LoadPRs();
        }
    }

    private async Task MergePR()
    {
        if (!UserService.IsLoggedIn) return;
        if (!Number.HasValue) return;

        isMerging = true;
        mergeError = "";
        StateHasChanged();

        try
        {
            var (success, error) = await PRService.MergePullRequestAsync(RepoName, Number.Value, UserService.Username, selectedStrategy);
            if (!success)
            {
                mergeError = error ?? "Merge failed";
            }
            else
            {
                await LoadPRs();
                LoadPRCommitsAndDiff();
            }
        }
        finally
        {
            isMerging = false;
            StateHasChanged();
        }
    }

    private async Task ClosePR()
    {
        if (!UserService.IsLoggedIn) return;
        if (Number.HasValue)
        {
            await PRService.ClosePullRequestAsync(RepoName, Number.Value);
            await LoadPRs();
        }
    }

    private async Task<string?> GetRepoPath()
    {
        var systemSettings = await AdminService.GetSystemSettingsAsync();
        var projectRoot = !string.IsNullOrEmpty(systemSettings.ProjectRoot)
            ? systemSettings.ProjectRoot
            : Config["Git:ProjectRoot"] ?? "/repos";

        var path = System.IO.Path.Combine(projectRoot, RepoName);
        if (LibGit2Sharp.Repository.IsValid(path)) return path;
        if (LibGit2Sharp.Repository.IsValid(path + ".git")) return path + ".git";
        return null;
    }

    private string? GetRepoPathSync()
    {
        // Synchronous path resolution using config fallback
        var projectRoot = Config["Git:ProjectRoot"] ?? "/repos";
        var path = System.IO.Path.Combine(projectRoot, RepoName);
        if (LibGit2Sharp.Repository.IsValid(path)) return path;
        if (LibGit2Sharp.Repository.IsValid(path + ".git")) return path + ".git";
        return null;
    }

    private string FormatDate(DateTime date)
    {
        var diff = DateTime.UtcNow - date;
        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes} minutes ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours} hours ago";
        if (diff.TotalDays < 30) return $"{(int)diff.TotalDays} days ago";
        return date.ToString("MMM d, yyyy");
    }

    private string RenderMarkdown(string markdown)
    {
        if (string.IsNullOrWhiteSpace(markdown)) return "";

        var document = Markdig.Markdown.Parse(markdown, _mdPipeline);

        foreach (var node in document.Descendants())
        {
            if (node is LinkInline link && link.IsImage && !string.IsNullOrEmpty(link.Url))
            {
                if (link.Url.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
                    link.Url.StartsWith("https://", StringComparison.OrdinalIgnoreCase) ||
                    link.Url.StartsWith("//") ||
                    link.Url.StartsWith("data:", StringComparison.OrdinalIgnoreCase))
                    continue;

                var resolvedPath = link.Url.TrimStart('/');
                link.Url = $"/raw/{RepoName}/{resolvedPath}?branch=main";
            }
        }

        var writer = new System.IO.StringWriter();
        var renderer = new Markdig.Renderers.HtmlRenderer(writer);
        _mdPipeline.Setup(renderer);
        renderer.Render(document);
        writer.Flush();
        return writer.ToString();
    }

